<div class="profile-container py-4 px-5 shadow">
  <div class="container-fluid px-5 my-5">
    <div class="row justify-content-center">
      <div class="col-xl-8">
        <div class="profile-card shadow">
          <div class="d-flex justify-content-between">
            <div class="p-2 m-4">
              <h2 class="profile-title"><%= current_user.name %></h2>
            </div>

            <div class="d-flex right-items">
              <div class="align-self-center mr-3">
                <%= link_to t('.Edit'), edit_profile_path, class: 'btn btn-success float-right mr-3' %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-center">
            <div class="card border w-75 bg-white mb-5">
              <p class="show-text-start mt-2 mx-3">
                <%= User.human_attribute_name("place_of_birth") %>:<%= current_user.place_of_birth %>
              </p><br>
              <p class="show-text-start mt-2 mx-3">
                <%= User.human_attribute_name("hobbies") %>:<%= current_user.hobbies %>
              </p><br>
              <p class="show-text-start mt-2 mx-3">
                <%= User.human_attribute_name("self_introduction") %>:<%= current_user.self_introduction %>
              </p><br>
            </div>
          </div><br>
        </div>
      </div>
    </div>
  </div>
</div>