        <li class="nav-item">
          <%= link_to t('defaults.PostNew'), new_post_path, class: 'dropdown-item' %>
        </li>
        <li class="nav-item">
          <%= link_to t('defaults.logout'), logout_path, class: 'dropdown-item', method: :delete %>
