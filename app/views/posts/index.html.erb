<div class="post-list-container py-4 px-5 shadow">
  <div class="container-fluid px-5 my-5">
    <div class="row"> 
      <% @posts.each do |post| %>
        <div class="col-xl-3 col-md-6 mt-5">
          <div class="card h-100">
            <%= image_tag(post.image.url, class: "card-img-top h-50") %>
            <div class="card-body">
              <p class="card-text post-title-link">
                <%= link_to post.title, post_path(post), class: 'post-link' %>
              </p>
            </div>
            <div class="card-footer">
              <div class="text-right">
                <%= link_to post.user.name, '#', class: 'post-link' %>
              </div>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
  </div>
</div>